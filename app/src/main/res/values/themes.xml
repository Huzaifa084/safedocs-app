<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.SafeDocs" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/surface_on</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnError">@color/on_error</item>
        <item name="colorError">@color/error</item>
    </style>

    <!-- ==================== COMPONENT STYLES ==================== -->

    <!-- Primary Button Style -->
    <style name="Widget.SafeDocs.Button.Primary" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/on_primary</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="iconTint">@color/on_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingStart">@dimen/spacing_large</item>
        <item name="android:paddingEnd">@dimen/spacing_large</item>
    </style>

    <!-- Secondary Button Style (filled, high-contrast) -->
    <style name="Widget.SafeDocs.Button.Secondary" parent="Widget.Material3.Button">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Destructive (Outlined) Button Style -->
    <style name="Widget.SafeDocs.Button.Destructive" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/error</item>
        <item name="strokeColor">@color/error</item>
        <item name="iconTint">@color/error</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <!-- Card Style -->
    <style name="Widget.SafeDocs.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">@dimen/corner_radius_medium</item>
        <item name="cardElevation">@dimen/elevation_small</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <!-- Toolbar Style -->
    <style name="Widget.SafeDocs.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
    </style>

    <!-- BottomNavigationView Style -->
    <style name="Widget.SafeDocs.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/surface</item>
        <item name="android:elevation">@dimen/elevation_medium</item>
        <item name="itemActiveIndicatorStyle">@style/Widget.SafeDocs.ActiveIndicator</item>
    </style>

    <style name="Widget.SafeDocs.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/primary</item>
    </style>

    <!-- Text Styles -->
    <style name="TextStyle.SafeDocs.Headline">
        <item name="android:textSize">@dimen/text_size_headline</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle.SafeDocs.Title">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle.SafeDocs.Subtitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle.SafeDocs.Body">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextStyle.SafeDocs.Label">
        <item name="android:textSize">@dimen/text_size_label</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextStyle.SafeDocs"/>
    <style name="TextStyle"/>

    <!-- Chip Style (Tonal) -->
    <style name="Widget.SafeDocs.Chip" parent="Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">?attr/colorSecondaryContainer</item>
        <item name="android:textColor">?attr/colorOnSecondaryContainer</item>
        <item name="chipMinHeight">24dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.LabelSmall</item>
    </style>
        <!-- Tonal Chip Style (subtle on surface) -->
        <style name="Widget.SafeDocs.Chip.Tonal" parent="Widget.Material3.Chip.Assist">
            <item name="chipBackgroundColor">@color/surface</item>
            <item name="android:textColor">@color/surface_on</item>
            <item name="chipMinHeight">24dp</item>
        </style>

    <!-- Choice Chip Style -->
    <style name="Widget.SafeDocs.Chip.Choice" parent="Widget.Material3.Chip.Filter">
        <item name="android:textColor">?attr/colorOnSecondaryContainer</item>
        <item name="chipBackgroundColor">?attr/colorSecondaryContainer</item>
    </style>

</resources>