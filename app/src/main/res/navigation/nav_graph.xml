<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <!-- Global action to navigate to document details from anywhere -->
    <action
        android:id="@+id/action_global_to_document_details"
        app:destination="@id/documentDetailsFragment" />

    <fragment
        android:id="@+id/loginFragment"
        android:name="org.devaxiom.safedocs.ui.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_login_to_documents"
            app:destination="@id/documentsFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/documentsFragment"
        android:name="org.devaxiom.safedocs.ui.DocumentsFragment"
        android:label="Documents"
        tools:layout="@layout/fragment_documents">
        <action
            android:id="@+id/action_documents_to_upload"
            app:destination="@id/uploadFragment" />
    </fragment>

    <fragment
        android:id="@+id/sharedWithMeFragment"
        android:name="org.devaxiom.safedocs.ui.SharedWithMeFragment"
        android:label="Shared"
        tools:layout="@layout/fragment_shared_with_me" />

    <fragment
        android:id="@+id/familyFragment"
        android:name="org.devaxiom.safedocs.ui.FamilyFragment"
        android:label="Family"
        tools:layout="@layout/fragment_family" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="org.devaxiom.safedocs.ui.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profile_to_login"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/uploadFragment"
        android:name="org.devaxiom.safedocs.ui.upload.UploadFragment"
        android:label="Upload Document"
        tools:layout="@layout/fragment_upload" />

    <fragment
        android:id="@+id/documentDetailsFragment"
        android:name="org.devaxiom.safedocs.ui.document.DocumentDetailsFragment"
        android:label="Document Details"
        tools:layout="@layout/fragment_document_details">
        <argument
            android:name="documentId"
            app:argType="string" />
    </fragment>

</navigation>
