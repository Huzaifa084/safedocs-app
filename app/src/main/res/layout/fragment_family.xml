<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshFamily"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <!-- Invitations Header -->
            <TextView
                android:id="@+id/tvInvitationsHeader"
                style="@style/TextStyle.SafeDocs.Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Pending Invitations"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Invitations List (Top) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerInvitations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:clipToPadding="false"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvInvitationsHeader"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:itemCount="1"
                tools:listitem="@layout/item_invitation" />

            <!-- Families Header -->
            <TextView
                android:id="@+id/tvFamiliesHeader"
                style="@style/TextStyle.SafeDocs.Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Your Families"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recyclerInvitations" />

            <!-- Recycler View for Family List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerFamilies"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:clipToPadding="false"
                android:paddingBottom="80dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/tvFamiliesHeader"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:listitem="@layout/item_family_card" />

            <!-- Empty State -->
            <LinearLayout
                android:id="@+id/emptyStateLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_nav_family"
                    app:tint="@color/text_secondary" />

                <TextView
                    style="@style/TextStyle.SafeDocs.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Create your family circle" />

                <TextView
                    style="@style/TextStyle.SafeDocs.Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Create a family circle to share emergency\ncontacts and documents instantly."
                    android:textColor="@color/text_secondary" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCreateFamilyEmpty"
                    style="@style/Widget.SafeDocs.Button.Primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Create Family" />
            </LinearLayout>

            <!-- Guest Nudge -->
            <include
                android:id="@+id/guestNudgeFamily"
                layout="@layout/view_guest_login_nudge"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCreateFamily"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="Create Family"
        android:src="@drawable/ic_upload" 
        app:backgroundTint="?attr/colorPrimary"
        app:tint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
        <!-- NOTE: Reusing ic_upload temporarily or need a plus icon -->

</androidx.constraintlayout.widget.ConstraintLayout>