<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?attr/colorSurface">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivDocumentIcon"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/ic_document_item"
            app:tint="?attr/colorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvDocumentTitle"
            style="@style/TextStyle.SafeDocs.Headline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            tools:text="Passport Renewal"
            app:layout_constraintStart_toEndOf="@id/ivDocumentIcon"
            app:layout_constraintTop_toTopOf="@id/ivDocumentIcon"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvDocumentCategory"
            style="@style/TextStyle.SafeDocs.Label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            tools:text="Travel Documents"
            app:layout_constraintStart_toStartOf="@id/tvDocumentTitle"
            app:layout_constraintTop_toBottomOf="@id/tvDocumentTitle"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/ivDocumentIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvLabelOwner"
            style="@style/TextStyle.SafeDocs.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Owner"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvOwnerName"
            style="@style/TextStyle.SafeDocs.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Huzaifa Naseer"
            app:layout_constraintTop_toBottomOf="@id/tvLabelOwner"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvLabelVisibility"
            style="@style/TextStyle.SafeDocs.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visibility"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvOwnerName"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipVisibility"
            style="@style/Widget.SafeDocs.Chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="PERSONAL"
            app:layout_constraintTop_toBottomOf="@id/tvLabelVisibility"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvLabelExpiry"
            style="@style/TextStyle.SafeDocs.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expires On"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/chipVisibility"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvExpiryDate"
            style="@style/TextStyle.SafeDocs.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="24 Dec 2025"
            app:layout_constraintTop_toBottomOf="@id/tvLabelExpiry"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Actions and sharing section container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/tvExpiryDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Actions row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDownload"
                    style="@style/Widget.SafeDocs.Button.Primary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Download"
                    app:icon="@drawable/ic_download"
                    app:iconTint="@color/on_primary" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDelete"
                    style="@style/Widget.SafeDocs.Button.Destructive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Delete"
                    app:icon="@drawable/ic_delete"
                    app:iconTint="@color/error" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEdit"
                    style="@style/Widget.SafeDocs.Button.Secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Edit"
                    app:icon="@drawable/ic_edit" />
            </LinearLayout>

            <!-- Shares Section -->
            <TextView
                android:id="@+id/tvSharesLabel"
                style="@style/TextStyle.SafeDocs.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Shared With"
                android:textColor="?attr/colorOnSurface" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerShares"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilShareEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Share with (email)">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etShareEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddShare"
                    style="@style/Widget.SafeDocs.Button.Secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add"
                    app:icon="@drawable/ic_add_user" />
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>